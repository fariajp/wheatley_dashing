<% content_for :title do %>My super sweet dashboard<% end %>
<div class="header-bar gridster">
  <div data-row="1" data-col="1" data-sizex="4">
    <div data-id="welcome" data-view="Text" data-width="85em" data-imgtitle="Fork me on GitHub" data-img="/assets/fork-me-on-github-badge-264x264.png" data-link="https://github.com/kalecser/wheatley_dashing" data-title="Bienvenido! Bem vindo! Welcome!" data-text="Welcome to Wheatley - EBANX DEV Quality dashboard" data-moreinfo=""></div>
  </div>
</div>
<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="test_percentage_per_repository" data-view="List" data-unordered="false" data-title="Repositories needing love - TESTS" data-moreinfo="% of tests"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="top_tests_teams" data-view="List" data-unordered="false" data-title="Top five teams - TESTS" data-moreinfo="% of tests"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="top_quality_teams" data-view="List" data-unordered="false" data-title="Top five teams - QUALITY" data-moreinfo="# of quality PRs! \o/"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="top_quality_devs" data-view="List" data-unordered="false" data-title="Top five devs - QUALITY" data-moreinfo="# of quality PRs! \o/"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="total_prs" data-view="Number" data-title="Total PRs" style="background-color:#ff9618"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="quality_percentage" data-view="Meter" data-title="Quality meter" data-height="200" data-width="200" data-min="0" data-max="100" data-suffix="%"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="test_percentage" data-view="Meter" data-title="Tests meter" data-height="200" data-width="200" data-min="0" data-max="100" data-suffix="%"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="last_quality_pr_photo" data-view="Image" data-title="Last person who commited quality" data-height="200" data-width="200" data-min="1" data-max="100" data-suffix="%"></div>
    </li>
  </ul>
</div>
